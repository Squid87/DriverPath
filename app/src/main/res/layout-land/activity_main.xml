<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/driver_path"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="3dp"
                android:textColor="@color/cardview_light_background"
                android:textSize="25sp"
                tools:text="Барнаул-Белокуриха" />


            <TextView
                android:id="@+id/carrier_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:paddingLeft="10dp"
                android:textColor="@color/cardview_light_background"
                android:textSize="20sp"
                tools:ignore="RtlSymmetry"
                tools:text="ООО Рубцовское ПАП" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:textColor="@color/cardview_light_background"
                android:textSize="20sp"
                android:paddingLeft="20dp"
                tools:ignore="RtlSymmetry"
                tools:text="всего мест" />

            <TextView
                android:id="@+id/max_seats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:textColor="@color/cardview_light_background"
                android:textSize="20sp"
                android:paddingLeft="31dp"
                tools:ignore="RtlSymmetry"
                tools:text="43" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="3dp"
                android:textColor="@color/cardview_light_background"
                android:textSize="20sp"
                tools:text="Время отбытия" />

            <TextView
                android:id="@+id/driver_time_out"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:textColor="@color/cardview_light_background"
                android:textSize="20sp"
                tools:text="11:30" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="3dp"
                android:paddingLeft="50dp"
                android:textColor="@color/cardview_light_background"
                android:textSize="20sp"
                tools:ignore="RtlSymmetry"
                tools:text="ИНН" />

            <TextView
                android:id="@+id/driver_inn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="3dp"
                android:textColor="@color/cardview_light_background"
                android:textSize="20sp"
                tools:ignore="RtlSymmetry"
                tools:text="2209039243" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:textColor="@color/cardview_light_background"
                android:textSize="20sp"
                android:paddingLeft="20dp"
                tools:ignore="RtlSymmetry"
                tools:text="свободных мест" />

            <TextView
                android:id="@+id/free_seats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:textColor="@color/cardview_light_background"
                android:textSize="20sp"
                android:paddingLeft="5dp"
                tools:ignore="RtlSymmetry"
                tools:text="22" />

        </LinearLayout>


    </LinearLayout>

    <FrameLayout
        android:id="@+id/activity_main__conteiner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="90dp">

    </FrameLayout>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/activity_main_forecast_bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/colorPrimary"
        app:itemTextColor="@color/cardview_light_background"
        app:menu="@menu/menu_navigation" />

</RelativeLayout>