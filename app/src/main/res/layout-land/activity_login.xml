<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="ru.avtovokzal.driverspath.LoginActivity">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/marginTop">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Станция отправления"
            android:textColor="@color/black_text"
            android:textSize="@dimen/login_activity_text"
            tools:ignore="HardcodedText" />

        <Spinner
            android:id="@+id/spinner_dispatch_station"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/marginLeft"
            android:padding="10dp"
            android:spinnerMode="dialog" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Станция назначения"
            android:textColor="@color/black_text"
            android:textSize="@dimen/login_activity_text"
            tools:ignore="HardcodedText" />

        <Spinner
            android:id="@+id/spinner_arrive_station"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/marginLeft"
            android:padding="10dp">

        </Spinner>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/login_set_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/marginLeft"
            android:background="@drawable/bb_bottom_bar_top_shadow"
            android:gravity="right|center_vertical"
            android:text="@string/login_activity_date"
            android:textColor="@color/black_text"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/login_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textColor="@color/black_text"
            android:textSize="@dimen/login_activity_text" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/login_set_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/marginLeft"
            android:background="@drawable/bb_bottom_bar_top_shadow"
            android:gravity="right|center_vertical"
            android:text="@string/login_activity_time"
            android:textColor="@color/black_text"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/login_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textColor="@color/black_text"
            android:textSize="@dimen/login_activity_text" />
    </LinearLayout>


    <Button
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/bb_bottom_bar_top_shadow"
        android:drawableLeft="@drawable/ok_icon"
        android:gravity="right|center_vertical"
        android:padding="15dp"
        android:text="@string/login_activity_go"
        android:textColor="@color/cardview_black_text"
        android:textSize="30sp"
        android:textStyle="bold|italic" />

</LinearLayout>


