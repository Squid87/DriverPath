<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/passenger_info_ticket"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:padding="@dimen/padding_headline_text"
            android:text="@string/last_name"
            android:textColor="@color/cardview_black_text"
            android:textSize="@dimen/underline_item_text_size"
            android:textStyle="bold|italic" />


        <TextView
            android:id="@+id/passenger_second_name"
            android:layout_width="252dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/padding_headline_text"
            android:textColor="@color/cardview_black_text"
            android:textSize="@dimen/underline_item_text_size"
            android:textStyle="bold|italic"
            tools:text="Палицкий" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/padding_headline_text"
            android:text="@string/document"
            android:textColor="@color/cardview_black_text"
            android:textSize="@dimen/underline_item_text_size"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/document"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/padding_headline_text"
            android:textColor="@color/cardview_black_text"
            android:textSize="@dimen/underline_item_text_size"
            android:textStyle="bold|italic"
            tools:text="Паспорт" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="160dp"
            android:gravity="center"
            android:padding="@dimen/padding_headline_text"
            android:text="@string/first_name"
            android:textColor="@color/cardview_black_text"
            android:textSize="@dimen/underline_item_text_size"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/passenger_first_name"
            android:layout_width="253dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/padding_headline_text"
            android:textColor="@color/cardview_black_text"
            android:textSize="@dimen/underline_item_text_size"
            android:textStyle="bold|italic"
            tools:text="Александр" />

        <TextView
            android:layout_width="148dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/padding_headline_text"
            android:text="@string/docSeries"
            android:textColor="@color/cardview_black_text"
            android:textSize="@dimen/underline_item_text_size"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/document_series"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_headline_text"
            android:textColor="@color/cardview_black_text"
            android:textSize="@dimen/underline_item_text_size"
            android:textStyle="bold|italic"
            tools:text="01 00" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:gravity="center"
            android:padding="@dimen/padding_headline_text"
            android:text="@string/meddle_name"
            android:textColor="@color/cardview_black_text"
            android:textSize="@dimen/underline_item_text_size"
            android:textStyle="bold|italic" />


        <TextView
            android:id="@+id/passenger_middle_name"
            android:layout_width="252dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/padding_headline_text"
            android:textColor="@color/cardview_black_text"
            android:textSize="@dimen/underline_item_text_size"
            android:textStyle="bold|italic"
            tools:text="Михайлович" />

        <TextView
            android:layout_width="148dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/padding_headline_text"
            android:text="@string/docNumber"
            android:textColor="@color/cardview_black_text"
            android:textSize="@dimen/underline_item_text_size"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/document_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_headline_text"
            android:textColor="@color/cardview_black_text"
            android:textSize="@dimen/underline_item_text_size"
            android:textStyle="bold|italic"
            tools:text="11 11 11" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:gravity="center"
            android:padding="@dimen/padding_headline_text"
            android:text="@string/citizen"
            android:textColor="@color/cardview_black_text"
            android:textSize="@dimen/underline_item_text_size"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/passenger_citizen"
            android:layout_width="245dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/padding_headline_text"
            android:textColor="@color/cardview_black_text"
            android:textSize="@dimen/underline_item_text_size"
            android:textStyle="bold|italic"
            tools:text="RU" />

        <TextView
            android:layout_width="146dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/padding_headline_text"
            android:text="@string/gender"
            android:textColor="@color/cardview_black_text"
            android:textSize="@dimen/underline_item_text_size"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/passenger_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/padding_headline_text"
            android:textColor="@color/cardview_black_text"
            android:textSize="@dimen/underline_item_text_size"
            android:textStyle="bold|italic"
            tools:text="М/Ж" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:gravity="center"
            android:padding="@dimen/padding_headline_text"
            android:text="@string/birthday"
            android:textColor="@color/cardview_black_text"
            android:textSize="@dimen/underline_item_text_size"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/passenger_birthday"
            android:layout_width="247dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/padding_headline_text"
            android:textColor="@color/cardview_black_text"
            android:textSize="@dimen/underline_item_text_size"
            android:textStyle="bold|italic"
            tools:text="01/01/01" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/padding_headline_text"
            android:text="@string/ticket_price"
            android:textColor="@color/cardview_black_text"
            android:textSize="@dimen/underline_item_text_size"
            android:textStyle="bold|italic"
            tools:text="Цена билета:" />


        <TextView
            android:id="@+id/ticket_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/padding_headline_text"
            android:textColor="@color/cardview_black_text"
            android:textSize="@dimen/underline_item_text_size"
            android:textStyle="bold|italic"
            tools:text="450" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/isGone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="350dp"
            android:gravity="center"
            android:text="Явиля/Не явился"
            android:textColor="@color/black_text"
            android:textSize="@dimen/underline_item_text_size"
            android:textStyle="italic|bold"
            android:enabled="false"
            tools:ignore="HardcodedText" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/ticket_attendance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:background="@drawable/bb_bottom_bar_top_shadow"
            android:drawableLeft="@drawable/ok_icon"
            android:gravity="right|center_vertical"
            android:text="@string/passenger_info_attendance"
            android:textSize="30sp"
            tools:ignore="ButtonStyle" />

        <Button
            android:id="@+id/ticket_no_attendance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:background="@drawable/bb_bottom_bar_top_shadow"
            android:drawableLeft="@drawable/delete_icon"
            android:gravity="left|center_vertical"
            android:text="@string/passenger_info_no_attendance"
            android:textSize="30sp"
            tools:ignore="ButtonStyle" />

    </LinearLayout>


</LinearLayout>
