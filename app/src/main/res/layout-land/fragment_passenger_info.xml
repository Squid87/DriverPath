<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/passenger_info_ticket"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/marginLeft"
        android:paddingRight="@dimen/marginRight">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:padding="@dimen/padding_headline_text"
            android:text="@string/last_name"
            android:textColor="@color/cardview_black_text"
            android:textSize="@dimen/underline_item_text_size"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:padding="@dimen/padding_headline_text"
            android:text="@string/first_name"
            android:textColor="@color/cardview_black_text"
            android:textSize="@dimen/underline_item_text_size"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="60dp"
            android:gravity="center"
            android:padding="@dimen/padding_headline_text"
            android:text="@string/meddle_name"
            android:textColor="@color/cardview_black_text"
            android:textSize="@dimen/underline_item_text_size"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="90dp"
            android:gravity="center"
            android:padding="@dimen/padding_headline_text"
            android:text="@string/citizen"
            android:textColor="@color/cardview_black_text"
            android:textSize="@dimen/underline_item_text_size"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="120dp"
            android:gravity="center"
            android:padding="@dimen/padding_headline_text"
            android:text="@string/birthday"
            android:textColor="@color/cardview_black_text"
            android:textSize="@dimen/underline_item_text_size"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/passenger_second_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView"
            android:layout_alignBottom="@+id/textView"
            android:layout_toEndOf="@+id/textView3"
            android:gravity="center"
            android:textColor="@color/cardview_black_text"
            android:textSize="@dimen/underline_item_text_size"
            android:textStyle="bold|italic"
            tools:text="Палицкий" />

        <TextView
            android:id="@+id/passenger_first_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView5"
            android:layout_alignBottom="@+id/textView5"
            android:layout_alignStart="@+id/passenger_second_name"
            android:gravity="center"
            android:textColor="@color/cardview_black_text"
            android:textSize="@dimen/underline_item_text_size"
            android:textStyle="bold|italic"
            tools:text="Александр" />

        <TextView
            android:id="@+id/passenger_middle_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView3"
            android:layout_alignBottom="@+id/textView3"
            android:layout_alignStart="@+id/passenger_first_name"
            android:gravity="center"
            android:textColor="@color/cardview_black_text"
            android:textSize="@dimen/underline_item_text_size"
            android:textStyle="bold|italic"
            tools:text="Михайлович" />

        <TextView
            android:id="@+id/passenger_citizen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView2"
            android:layout_alignBottom="@+id/textView2"
            android:layout_toEndOf="@+id/textView2"
            android:gravity="center"
            android:textColor="@color/cardview_black_text"
            android:textSize="@dimen/underline_item_text_size"
            android:textStyle="bold|italic"
            tools:text="RU" />

        <TextView
            android:id="@+id/passenger_birthday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView6"
            android:layout_alignBottom="@+id/textView6"
            android:layout_toEndOf="@+id/textView6"
            android:gravity="center"
            android:textColor="@color/cardview_black_text"
            android:textSize="@dimen/underline_item_text_size"
            android:textStyle="bold|italic"
            tools:text="01/01/01" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/passenger_second_name"
            android:layout_alignBottom="@+id/passenger_second_name"
            android:layout_marginStart="70dp"
            android:layout_toEndOf="@+id/passenger_birthday"
            android:gravity="center"
            android:text="@string/document"
            android:textColor="@color/cardview_black_text"
            android:textSize="@dimen/underline_item_text_size"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/passenger_first_name"
            android:layout_alignBottom="@+id/passenger_first_name"
            android:layout_alignEnd="@+id/textView7"
            android:gravity="center"
            android:text="@string/docSeries"
            android:textColor="@color/cardview_black_text"
            android:textSize="@dimen/underline_item_text_size"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/passenger_middle_name"
            android:layout_alignBottom="@+id/passenger_middle_name"
            android:layout_alignEnd="@+id/textView8"
            android:gravity="center"
            android:text="@string/docNumber"
            android:textColor="@color/cardview_black_text"
            android:textSize="@dimen/underline_item_text_size"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/passenger_citizen"
            android:layout_alignBottom="@+id/passenger_citizen"
            android:layout_alignEnd="@+id/textView9"
            android:gravity="center"
            android:text="@string/gender"
            android:textColor="@color/cardview_black_text"
            android:textSize="@dimen/underline_item_text_size"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/passenger_birthday"
            android:layout_alignBottom="@+id/passenger_birthday"
            android:layout_alignEnd="@+id/textView9"
            android:layout_marginLeft="45dp"
            android:gravity="center"
            android:text="@string/ticket_price"
            android:textColor="@color/cardview_black_text"
            android:textSize="@dimen/underline_item_text_size"
            android:textStyle="bold|italic"
            tools:text="Цена билета:" />

        <TextView
            android:id="@+id/document"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView7"
            android:layout_alignBottom="@+id/textView7"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/textView7"
            android:gravity="center"
            android:textColor="@color/cardview_black_text"
            android:textSize="@dimen/underline_item_text_size"
            android:textStyle="bold|italic"
            tools:text="Паспорт" />

        <TextView
            android:id="@+id/document_series"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView8"
            android:layout_alignBottom="@+id/textView8"
            android:layout_alignStart="@+id/document"
            android:textColor="@color/cardview_black_text"
            android:textSize="@dimen/underline_item_text_size"
            android:textStyle="bold|italic"
            tools:text="01 00" />

        <TextView
            android:id="@+id/document_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView9"
            android:layout_alignBottom="@+id/textView9"
            android:layout_alignStart="@+id/document_series"
            android:textColor="@color/cardview_black_text"
            android:textSize="@dimen/underline_item_text_size"
            android:textStyle="bold|italic"
            tools:text="11 11 11" />

        <TextView
            android:id="@+id/passenger_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView10"
            android:layout_alignBottom="@+id/textView10"
            android:layout_alignStart="@+id/document_number"
            android:textColor="@color/cardview_black_text"
            android:textSize="@dimen/underline_item_text_size"
            android:textStyle="bold|italic"
            tools:text="М/Ж" />

        <TextView
            android:id="@+id/ticket_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView12"
            android:layout_alignBottom="@+id/textView12"
            android:layout_alignStart="@+id/passenger_gender"
            android:textColor="@color/cardview_black_text"
            android:textSize="@dimen/underline_item_text_size"
            android:textStyle="bold|italic"
            tools:text="450" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/ticket_attendance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:background="@drawable/bb_bottom_bar_top_shadow"
                android:drawableLeft="@drawable/ok_icon"
                android:gravity="right|center_vertical"
                android:text="@string/passenger_info_attendance"
                android:textSize="30sp"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/ticket_no_attendance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:background="@drawable/bb_bottom_bar_top_shadow"
                android:drawableLeft="@drawable/delete_icon"
                android:gravity="left|center_vertical"
                android:text="@string/passenger_info_no_attendance"
                android:textSize="30sp"
                tools:ignore="ButtonStyle" />

        </LinearLayout>

    </RelativeLayout>


</LinearLayout>
